.footer
  &__links
    list-style: none
    margin: 0
    padding: 0

  &__link-item
    display: inline-block

  &__link
    display: block
    color: #383838
    line-height: 60px
    width: 60px
    transition: all .3s ease-in-out
    text-shadow: none
    &:hover
      color: $primary-color
      text-shadow: $text-shadow

  &__link-icon
    display: block
    font-size: 30px

  &__link-text
    text-indent: -9999px
    display: block
    display: none

  &__source-link
    color: #909090
    text-decoration: none
    text-shadow: none
    margin: 10px 0
    display: block
    transition: all .3s ease-in-out
    &:hover
      color: $primary-color
